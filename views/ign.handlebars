<main>
    <div class="uk-padding" id="content">
        <h1 class="uk-heading-primary uk-text-center">All the Computer Gaming News That's Fit to Scrape!</h1>
        <hr>
    </div>

    <div class="uk-container uk-box-shadow-large">
        <div class="uk-section uk-section-muted" id="notes">

        </div>

        <table class="uk-table uk-table-hover uk-table-justify uk-table-divider">
            <hr>
            <caption>News from ign.com</caption>
            <thead>
                <tr>
                    <th class="uk-text-justify ">Title</th>

                    <th class="uk-text-justify ">Route</th>

                </tr>
            </thead>
            <tbody>
                {{#each this}}
                <tr>
                    <td data={{id}}>{{title}} {{#if note}}
                        <span uk-icon="comment"></span>
                        {{/if}}</td>


                    <td><a href="http://www.ign.com" +{{link}}>{{link}}</a></td>
                </tr>
                {{/each}}
            </tbody>

        </table>

    </div>
    <script src="/js/ign.js"></script>
</main>